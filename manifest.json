{
    "manifest_version": 3,
    "name": "WAVE Group",
    "version": "8.1",
    "description": "Wave Group Extension",
    "permissions": [
        "tabs",
        "scripting",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://script.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Capture Proof By WAVE"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
